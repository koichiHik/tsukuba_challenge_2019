<launch>

  <arg name="robot" />

  <!-- Urg Node -->
  <node name="urg_node" pkg="urg_node" type="urg_node" output="screen">

    <!-- Topic Renaming -->
    <remap from="diagnostics"     to="/urg_node/diagnostics"/>
    <remap from="laser_status"    to="/urg_node/laser_status"/>
    <remap from="scan"            to="/urg_node/scan"/>
    <remap from="urg_node/parameter_descriptions"   to="/urg_node/parameter_descriptions"/>
    <remap from="urg_node/parameter_updates"        to="/urg_node/parameter_updates"/>

    <remap from="~/frame_id"      to="/frame_name/lidar"/>
    <remap from="~/ip_address"    to="/urg_node/ip_address"/>
    <remap from="~/angle_max"     to="/urg_node/angle_max"/>
    <remap from="~/angle_min"     to="/urg_node/angle_min"/>
    <remap from="~/cluster"       to="/urg_node/cluster"/>
    <remap from="~/skip"          to="/urg_node/skip"/>
    <remap from="~/tf_prefix"     to="/urg_node/tf_prefix"/>
    <remap from="~/time_offset"   to="/urg_node/time_offset"/>

  </node>
</launch>

