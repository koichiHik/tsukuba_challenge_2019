<launch>

  <arg name="robot" default="" />
  <node pkg="static_transform_publisher_param_support" type="static_transform_publisher_param_support" name="laser_broadcaster" >

    <!-- Frame Name -->
    <param name="~/frame_id"          value="base_link" />
    <param name="~/child_frame_id"    value="lidar" />

    <!-- Parameter Name -->    
    <remap from="~/x"                 to="/urg_node/x" />
    <remap from="~/y"                 to="/urg_node/y" />
    <remap from="~/z"                 to="/urg_node/z" />
    <remap from="~/yaw"               to="/urg_node/yaw" />
    <remap from="~/pitch"             to="/urg_node/pitch" />
    <remap from="~/roll"              to="/urg_node/roll" />   
    <remap from="~/period_in_ms"      to="/urg_node/tf_period_in_ms" />

  </node>

</launch>

