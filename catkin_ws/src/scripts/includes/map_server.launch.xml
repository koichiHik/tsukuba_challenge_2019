<launch>
  <arg name="robot" default="" />
  <arg name="map_path" default="" />
  <arg name="map_server_name" default="" />

  <node pkg="map_server" type="map_server" name="$(arg map_server_name)" args="$(arg map_path)" output="screen">
    
    <!-- Topic Name -->
    <remap from="map" to="/$(arg map_server_name)/map" />
    <remap from="map_metadata" to="/$(arg map_server_name)/map_metadata" />
    
    <!-- Frame Name -->
    <param name="frame_id" value="map" />

  </node>
</launch>
