<launch>

  <arg name="robot" default="" />

  <!-- Basic Configurations -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">

    <!-- Topic Rename -->
    <remap from="/cmd_vel" to="/move_base/cmd_vel" />
    <remap from="/odom" to="/odometry/imu" />
    <remap from="/map" to="/map_server/map" />

    <!-- Move Base Setting -->
    <rosparam file="$(find configs)/navigation/$(arg robot)_movebase.yaml" command="load" />

    <!-- Global Planner -->
    <rosparam file="$(find configs)/navigation/$(arg robot)_navfn_ros.yaml" command="load" />

    <!-- Teb Local Planner Setting -->
    <rosparam file="$(find configs)/navigation/$(arg robot)_teb_local_planner.yaml" command="load" />

    <!-- Global Cost Map -->
    <rosparam file="$(find configs)/costmap/$(arg robot)_common_costmap.yaml" command="load" ns="global_costmap"/>
    <rosparam file="$(find configs)/costmap/$(arg robot)_global_costmap.yaml" command="load" />

    <!-- Local Cost Map -->
    <rosparam file="$(find configs)/costmap/$(arg robot)_common_costmap.yaml" command="load" ns="local_costmap"/>
    <rosparam file="$(find configs)/costmap/$(arg robot)_local_costmap.yaml" command="load" />    

  </node>
</launch>
