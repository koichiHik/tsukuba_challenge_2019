<launch>

  <arg name="robot" default="" />
	<arg name="nodelet_mgr" default="zed_nodelet_mgr"/>  

  <include file="$(find scripts)/includes/zed_tf.launch.xml" />
	<node pkg="nodelet" type="nodelet" name="$(arg nodelet_mgr)" args="manager" output="screen"/>  

  <!-- ZED Node -->>
  <node pkg="nodelet" type="nodelet" name="ZEDWrapperNodelet" args="load zed_wrapper/ZEDWrapperNodelet $(arg nodelet_mgr)" output="screen">

    <!-- ROS frame names -->
    <param name="~left_frame_id" value="zed_left" />
    <param name="~right_frame_id" value="zed_right" />

    <!-- ROS topic names -->
    <remap from="~left_topic" to="/zed/left/rect/image_color" />
    <remap from="~left_raw_topic" to="/zed/left/raw/image_color" />
    <remap from="~left_cam_info_topic" to=" /zed/left/rect/camera_info" />
    <remap from="~left_raw_cam_info_topic" to="/zed/left/raw/camera_info" />
    <remap from="~right_topic" to="/zed/right/rect/image_color" />
    <remap from="~right_raw_topic" to="/zed/right/raw/image_color" />
    <remap from="~right_cam_info_topic" to="/zed/right/rect/camera_info" />
    <remap from="~right_raw_cam_info_topic" to="/zed/right/raw/camera_info" />

    <!-- ZED parameters -->
    <remap from="~zed_id" to="/zed/zed_id" />
    <remap from="~resolution" to="/zed/resolution" />
    <remap from="~publish_raw" to="/zed/publish_raw" />
    <remap from="~quality" to="/zed/quality" />
    <remap from="~sensing_mode" to="/zed/sensing_mode" />
    <remap from="~frame_rate" to="/zed/frame_rate" />
    <remap from="~gpu_id" to="/zed/gpu_id" />

  </node>

</launch>
